			<shaderType>Transparent</shaderType>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>4500</MaxHitPoints>
			<Beauty>-260</Beauty>
		</statBases>
		<altitudeLayer>Floor</altitudeLayer>
		<tickerType>Rare</tickerType>
