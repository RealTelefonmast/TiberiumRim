<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="BuildingBase_TR" Abstract="True" Class="TiberiumRim.TRThingDef">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	</ThingDef>

	<ThingDef Abstract="True" Name="TiberiumBuildingBase" ParentName="BuildingBase_TR">
		<category>Building</category>
		<passability>Impassable</passability>
		<building>
			<claimable>false</claimable>
			<isEdifice>false</isEdifice>
			<deconstructible>false</deconstructible>
			<allowAutoroof>false</allowAutoroof>
		</building>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<rotatable>false</rotatable>
		<destroyable>true</destroyable>
		<useHitPoints>true</useHitPoints>
	</ThingDef>
	
	<ThingDef Abstract="True" Name="TiberiumProducerBase" ParentName="TiberiumBuildingBase" Class="TiberiumRim.TiberiumProducerDef">
		<thingClass>TiberiumRim.Building_TiberiumProducer</thingClass>
		<spawnIntervalRange>
			<min>30000</min>
			<max>90000</max>
		</spawnIntervalRange>
		<tickerType>Rare</tickerType>
		<selectable>true</selectable>
		<neverOverlapFloors>true</neverOverlapFloors>
		<blockPlants>true</blockPlants>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>		
	</ThingDef>
	
	<ThingDef ParentName="TiberiumProducerBase">
		<defName>TiberiumCraterGreen_TBNS</defName>
		<description>The aftermath of a Tiberium asteroid impact, leaving behind a crater of glowing death spreading green gold over your map.</description>
		<label>Green Tiberium Field</label>
		<growRadius>18</growRadius>
		<crystalDefs>
			<li>TiberiumGreen</li>
		</crystalDefs>
		<size>(3,3)</size>
		<graphicData>
			<texPath>Building/Natural/BigTiberiumCraterGreen</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shaderType>Transparent</shaderType>
			<drawSize>(5,5)</drawSize>
		</graphicData>
		<altitudeLayer>Floor</altitudeLayer>
		<statBases>
			<MaxHitPoints>5000</MaxHitPoints>
			<Beauty>175</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>10</glowRadius>
				<glowColor>(120,255,120,0)</glowColor>
			</li>
		</comps>
        <killedLeavings>
            <TiberiumGreen>9</TiberiumGreen>
        </killedLeavings>
		<filthLeaving>FilthTiberiumGreen</filthLeaving>
	</ThingDef>
	
	<ThingDef ParentName="TiberiumProducerBase">
		<defName>TiberiumCraterBlue_TBNS</defName>
		<description>The aftermath of a Tiberium asteroid impact, leaving behind a crater of glowing death spreading blue crystals slowly. The glow is very attracting.</description>
		<label>Blue Tiberium Field</label>
		<growRadius>15</growRadius>
		<crystalDefs>
			<li>TiberiumBlue</li>
		</crystalDefs>
		<size>(3,3)</size>
		<graphicData>
			<texPath>Building/Natural/BigTiberiumCraterBlue</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shaderType>Transparent</shaderType>
			<drawSize>(5,5)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>7500</MaxHitPoints>
			<Beauty>125</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_HeatPusher">
				<heatPerSecond>47</heatPerSecond>
				<heatPushMaxTemperature>207</heatPushMaxTemperature>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>10</glowRadius>
				<glowColor>(120,150,255,0)</glowColor>
			</li>
		</comps>
        <killedLeavings>
            <TiberiumBlue>9</TiberiumBlue>
        </killedLeavings>
		<filthLeaving>FilthTiberiumBlue</filthLeaving>
	</ThingDef>	
	
	<ThingDef ParentName="TiberiumProducerBase">
		<defName>TiberiumMeteor_TBNS</defName>
		<description>This strange meteor seems to contain various types of a glowing crystal, they seem to spread outside of it slowly.</description>
		<label>Tiberium Meteor</label>
		<growRadius>6</growRadius>
		<crystalDefs>
			<li>TiberiumBlue</li>
			<li>TiberiumGreen</li>
			<li>TiberiumRed</li>
		</crystalDefs>
		<graphicData>
			<texPath>Building/Natural/TiberiumMeteor</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>35</pathCost>
		<blockWind>true</blockWind>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.50</fillPercent>
		<size>(2,2)</size>
		<statBases>
			<MaxHitPoints>3500</MaxHitPoints>
			<Flammability>0</Flammability>
			<Beauty>-125</Beauty>
			<WorkToBuild>56000</WorkToBuild>
		</statBases>
		<building>
			<claimable>false</claimable>
		</building>
		<selectable>true</selectable>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<drawerType>MapMeshOnly</drawerType>
		<repairEffect>ConstructMetal</repairEffect>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>6</glowRadius>
				<glowColor>(51,255,51,0)</glowColor>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>4</glowRadius>
				<glowColor>(0,128,255,0)</glowColor>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(255,0,0,0)</glowColor>
			</li>
		</comps>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <killedLeavings>
            <TiberiumGreen>3</TiberiumGreen>
			<TiberiumBlue>2</TiberiumBlue>
			<TiberiumRed>1</TiberiumRed>
        </killedLeavings>
		<filthLeaving>FilthTiberiumGreen</filthLeaving>
	</ThingDef>	

