<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BenchBase">
		<defName>TiberiumResearchBench</defName>
		<label>research station</label>
		<description>This station allows us to communicate to different Factions and gather information.\n\nResearch is sped up by the high-tech tools.\n\nRequires power.</description>
		<thingClass>Building_ResearchBench</thingClass>
		<size>(7,4)</size>
		<costList>
			<Steel>500</Steel>
			<Plasteel>50</Plasteel>
			<Component>10</Component>
		</costList>
		<graphicData>
			<texPath>Building/Common/TibResearchStation</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(8,4)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<statBases>
			<MaxHitPoints>1000</MaxHitPoints>
			<WorkToBuild>10000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<ResearchSpeedFactor>1.0</ResearchSpeedFactor>
		</statBases>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>325</basePowerConsumption>
				<startElectricalFires>false</startElectricalFires>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>MultiAnalyzer</li>
					<li>TiberiumResearchCraftingBench</li>
				</linkableFacilities>
			</li>
		</comps>
		<fillPercent>0.5</fillPercent>
		<interactionCellOffset>(0,0,3)</interactionCellOffset>
		<hasInteractionCell>true</hasInteractionCell>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Tiberium</designationCategory>
		<surfaceType>Item</surfaceType>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>TiberiumResearch</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="BenchBase">
		<defName>TiberiumResearchCrane_TBNS</defName>
		<label>tiberium research crane</label>
		<description>This research crane can be placed on any Tiberium source and will allow you to learn more about the alien substance. It is immune to Tiberium itself and will inhibit the producer from spawning more Tiberium.\n\nOnly one research crane can be placed on a map.</description>
		<thingClass>Building_ResearchBench</thingClass>
		<size>(5,5)</size>
		<costList>
			<Steel>300</Steel>
			<Component>4</Component>
		</costList>
		<graphicData>
			<texPath>Building/Common/ResearchCrane</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(8,8)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<building>
			<workSpeedPenaltyOutdoors>false</workSpeedPenaltyOutdoors>
			<workSpeedPenaltyTemperature>false</workSpeedPenaltyTemperature>
		</building>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>3000</WorkToBuild>
			<Flammability>0.5</Flammability>
			<ResearchSpeedFactor>1.0</ResearchSpeedFactor>
		</statBases>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>110</basePowerConsumption>
				<startElectricalFires>false</startElectricalFires>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<inspectorTabs>
			<li>TiberiumRim.ITab_TiberiumResearch</li>
		</inspectorTabs>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<interactionCellOffset>(0,0,-3)</interactionCellOffset>
		<rotatable>false</rotatable>
		<hasInteractionCell>true</hasInteractionCell>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Tiberium</designationCategory>
		<surfaceType>Item</surfaceType>
		<placeWorkers>
			<li>TiberiumRim.PlaceWorker_OnTiberiumProducer</li>
			<li>TiberiumRim.PlaceWorker_Once</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>Smithing</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="BenchBase">
		<defName>TiberiumResearchCraftingBench</defName>
		<label>Tiberium research crafting adapter</label>
		<description>This structure can be used to craft Tiberium specific items.</description>
		<thingClass>Building_WorkTable</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(3,4)</size>
		<costList>
			<Steel>100</Steel>
			<Plasteel>15</Plasteel>
			<Component>5</Component>
		</costList>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<graphicData>
			<texPath>Building/Common/TibResearchCrafter</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4.5,4.5)</drawSize>
			<shadowData>
				<volume>(1.5,1,1.5)</volume>
			</shadowData>
			<damageData>
				<rect>(0.3,0.1,2.4,1.8)</rect>
			</damageData>
		</graphicData>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<recipes>
		</recipes>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<fillPercent>0.5</fillPercent>
		<interactionCellOffset>(0,0,3)</interactionCellOffset>
		<hasInteractionCell>true</hasInteractionCell>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Tiberium</designationCategory>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>TiberiumKnowledge</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>125</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<ResearchSpeedFactor>0.1</ResearchSpeedFactor>
				</statOffsets>
				<maxSimultaneous>1</maxSimultaneous>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>
    
</Defs>