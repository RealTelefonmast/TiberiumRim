	<ThingDef ParentName="BuildingBase" Class="TiberiumRim.GraphicSwitchableDef">
		<defName>TiberiumPowerPlant</defName>
		<label>Tiberium power plant</label>
		<description>This power plant needs to be connected to a Tiberium network before it can properly operate, it will automatically consume Tiberium from the network to sustain itself.</description>
		<thingClass>TiberiumRim.Building_TiberiumPowerPlant</thingClass>
		<graphicData>
			<texPath>Building/Common/PowerPlant</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,5)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>true</blockWind>
		<fillPercent>1.0</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(4,4)</size>
		<costList>
			<Steel>500</Steel>
			<Uranium>50</Uranium>
			<Plasteel>25</Plasteel>
			<Component>5</Component>
			<BookRiparius>1</BookRiparius>
		</costList>
		<comps>
			<li Class="TiberiumRim.CompProperties_TNW">
				<maxStorage>750</maxStorage>
				<isLocalStorage>true</isLocalStorage>
				<isConsumer>true</isConsumer>
				<consumeAmtPerDay>200</consumeAmtPerDay>
			</li>
			<li Class="TiberiumRim.CompProperties_GraphicExtra">
				<overlayGraphicPath>Building/Common/PowerPlantOL</overlayGraphicPath>
				<filledOverlayGraphicPath>Building/FX/PowerPlant_Filled</filledOverlayGraphicPath>
			</li>
			<li Class="CompProperties_Flickable" />
			<li Class="CompProperties_Glower">
				<glowRadius>4</glowRadius>
				<glowColor>(120,255,150,0)</glowColor>
			</li>			
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>12</heatPerSecond>
			</li>
			<li Class="TiberiumRim.CompFX_Properties">
				<Modes>
					<li>ThrowSmoke</li>
				</Modes>
				<vectorsNorth>
					<li>(-1.3,0,-0.1)</li>
					<li>(1.3,0,-0.1)</li>
				</vectorsNorth>
				<tickRange>15~25</tickRange>
				<moteDef>Mote_TiberiumSmoke</moteDef>
				<moteSize>0.4</moteSize>
			</li>
			<li Class="CompProperties_Power">
				<compClass>TiberiumRim.CompTiberiumPowerPlant</compClass>
				<basePowerConsumption>-3000</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Tiberium</designationCategory>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<constructEffect>ConstructMetal</constructEffect>
		<researchPrerequisites>
			<li>TiberiumPower</li>
		</researchPrerequisites>
	</ThingDef>

