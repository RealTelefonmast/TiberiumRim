		<costList>
			<Steel>100</Steel>
		</costList>
		<graphicData>
			<texPath>Building/Common/Connector</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
			<shadowData>
				<volume>(1.5,1,1.5)</volume>
			</shadowData>
			<damageData>
				<rect>(0.3,0.1,2.4,1.8)</rect>
			</damageData>
		</graphicData>
		<uiIconPath>Building/Common/Connector_Icon</uiIconPath>
		<passability>Standable</passability>
		<pathCost>0</pathCost>
