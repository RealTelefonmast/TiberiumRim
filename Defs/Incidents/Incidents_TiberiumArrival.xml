<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<IncidentDef Class="TiberiumRim.AsteroidDef">
		<defName>AsteroidGreen</defName>
		<label>green tiberium asteroid</label>
		<targetType>MapPlayerHome</targetType>
		<workerClass>TiberiumRim.IncidentWorker_GreenAsteroid</workerClass>
		<baseChance>2.0</baseChance>
		<letterLabel>Green Tiberium Asteroid</letterLabel>
		<letterText>An unusual meteorite has crashed nearby and made a crater.\n\nThere seems to be some strange crystals poking out of it, and a few have broken off and scattered around the site.\n\nBe careful, the substance could be dangerous!</letterText>
		<letterDef>BadNonUrgent</letterDef>
		<minRefireDays>175</minRefireDays>
		<category>ThreatBig</category>
		<asteroidType>TiberiumCraterGreen_TBNS</asteroidType>
		<pointsScaleable>true</pointsScaleable>
		<minThreatPoints>500</minThreatPoints>
	</IncidentDef>
	
