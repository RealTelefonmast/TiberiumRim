<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="BaseFilthTR" Abstract="True">
    <thingClass>Filth</thingClass>
    <category>Filth</category>
    <altitudeLayer>Filth</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawerType>MapMeshOnly</drawerType>
    <graphicData>
			<graphicClass>Graphic_Cluster</graphicClass>
			<shaderType>Transparent</shaderType>
		</graphicData>
    <statBases>
      <Beauty>-15</Beauty>
      <Cleanliness>-5</Cleanliness>
    </statBases>
  </ThingDef>
  
	<ThingDef Name="TibFilth" ParentName="BaseFilthTR" Abstract="True">
		<statBases>
			<Beauty>-10</Beauty>
			<Cleanliness>-55</Cleanliness>
		</statBases>
		<filth>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>100</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
		</filth>
	</ThingDef>

  <ThingDef ParentName="TibFilth">
    <defName>FilthTiberiumGreen</defName>
    <label>Green tiberium dust</label>
    <graphicData>
      <texPath>Filth/TibDustGreen</texPath>
      <color>(255, 255, 255, 255)</color>
