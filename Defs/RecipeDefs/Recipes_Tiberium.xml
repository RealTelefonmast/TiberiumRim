	<RecipeDef Class="TiberiumRim.RecipeDef_Tiberium">
		<defName>MakeBookRiparius</defName>
		<label>Write about green Tiberium.</label>
		<jobString>writing about green Tiberium.</jobString>
		<workAmount>300</workAmount>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<drainType>Green</drainType>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>WoodLog</li>
			  </thingDefs>
			</filter>
			<count>5</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
		  <BookRiparius>1</BookRiparius>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
